bindsym $mod+c [class="Google-chrome" instance="notion.so"] scratchpad show
for_window [class="Google-chrome" instance="notion.so"] floating enable, move scratchpad, scratchpad show

bindsym $mod+n [class="^Google-chrome" instance="^outlook"] scratchpad show
for_window [class="^Google-chrome" instance="^outlook"] floating enable, move scratchpad, scratchpad show

# Terminal scratchpad
for_window [instance="urxvt_scratchad"] move to scratchpad, border none
bindsym $mod+Shift+t [instance="urxvt_scratchpad"] scratchpad show
exec urxvtc -name urxvt_scratchpad

# floating pop up automatically
#for_window [window_role="pop-up"] floating enable
